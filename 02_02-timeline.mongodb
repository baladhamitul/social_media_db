use("social_media_demo");

const userIdRaw = "REPLACE_USER_ID";
const userId = userIdRaw.startsWith("REPLACE")
  ? db.users.findOne({}, { _id: 1 })._id
  : ObjectId(userIdRaw);

db.posts
  .find({ authorId: userId })
  .sort({ createdAt: -1 })
  .limit(20)
  .project({ text: 1, hashtags: 1, visibility: 1, createdAt: 1, stats: 1 });
